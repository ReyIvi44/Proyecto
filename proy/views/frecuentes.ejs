        <a href="#top" title="Volver arriba" class="btn btn-dark rounded-pill px-4 py-2 mb-3" style="font-size: 1.5rem;">
            ↑ Volver arriba
        </a>
        <p>
            <a href="/" class="text-decoration-none fs-3 fw-bold text-primary">
            Volver al Inicio
            </a>
        </p>
    </div>
    <script>
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
              e.preventDefault();
              
              const targetElement = document.querySelector(this.getAttribute('href'));
              const headerOffset = 150; // Cambia este valor según la altura de tu header
              const elementPosition = targetElement.offsetTop;
              const offsetPosition = elementPosition - headerOffset;
  
              window.scrollTo({
                  top: offsetPosition,
                  behavior: 'smooth'
              });
          });
      });
  </script>

  <script>
  document.addEventListener("DOMContentLoaded", function () {
  const esFrecuentes = document.body.classList.contains("preguntas-frecuentes");

  if (esFrecuentes) {
    const dropdown = document.getElementById("dropdown");
    const circleImg = document.querySelector(".circle-img");
    const titulo = document.getElementById("titulo-principal");

    function toggleDropdownFrecuentes() {
      dropdown.classList.toggle("active");
      if (dropdown.classList.contains("active")) {
        titulo.style.display = "none";
      } else {
        titulo.style.display = "block";
      }
    }

    circleImg.addEventListener("click", toggleDropdownFrecuentes);

    document.addEventListener("click", function (event) {
      if (!dropdown.contains(event.target) && !circleImg.contains(event.target)) {
        dropdown.classList.remove("active");
        titulo.style.display = "block";
      }
    });
  }
});
</script>
  </body>

</html>

