    <div class="header1">
        <h1 class="display-1" style="margin-top: 30px;"><strong>Preguntas Frecuentes</strong></h1>
    </div>
    <div class="container">
        <div class="container1">
            <!-- Panel lateral con las preguntas -->
            <div class="sidebar">
                <ul>
                    <li><a href="#pregunta1">Herramienta de medición</a></li>
                    <li><a href="#pregunta2">Mapas Base</a></li>
